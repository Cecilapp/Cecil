    <blockquote>{{ asset('css/style.css')|minify|inline }}</blockquote>
  </p>
  <h3>With option</h3>
  <p>
    <pre>{% verbatim %}{{ asset('css/style.css', {minify: true})|inline }}{% endverbatim %}</pre>
    <blockquote>{{ asset('css/style.css', {minify: true})|inline }}</blockquote>
  </p>

