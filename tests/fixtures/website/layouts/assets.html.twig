    <pre>{% verbatim %}{{ url(asset('images/cecil-logo.png')) }}{% endverbatim %}</pre>
    <blockquote>
      {{- url(asset('images/cecil-logo.png')) -}}
    </blockquote>
  </p>
  <h3>With `canonical` option</h3>
  <p>
    <pre>{% verbatim %}{{ url(asset('images/cecil-logo.png'), {canonical: true}) }}{% endverbatim %}</pre>
    <blockquote>{{ url(asset('images/cecil-logo.png'), {canonical: true}) }}</blockquote>
  </p>
  <h3>With filter</h3>
