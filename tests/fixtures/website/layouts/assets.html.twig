    <pre>{% verbatim %}{{ asset('css/style.css', {fingerprint: true})|fingerprint }}{% endverbatim %}</pre>
    <blockquote>{{ asset('css/style.css', {fingerprint: true})|fingerprint }}</blockquote>
  </p>

