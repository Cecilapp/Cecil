{
  "data": [
{% for p in page.pages|sortByDate %}
    {
      "id": {{ p.id|json_encode() }},
      "title": {{ p.title|json_encode() }},
      "url": {{ url(p, { canonical: true, format: 'json' })|json_encode() }}
    }{% if not loop.last %},{% endif %}
{% endfor %}

  ]{% if page.pagination is defined %},
  "meta": {
    "totalPage": {{ page.totalpages }}
  },
  "links": {
    "self": {{ url(site.pages[page.pagination.self], {canonical: true, format: 'json'})|json_encode() }},
    "first": {{ url(site.pages[page.pagination.first], {canonical: true, format: 'json'})|json_encode() }},
{% if page.pagination.prev is defined %}
    "prev": {{ url(site.pages[page.pagination.prev], {canonical: true, format: 'json'})|json_encode() }},
{% endif %}
{% if page.pagination.next is defined %}
    "next": {{ url(site.pages[page.pagination.next], {canonical: true, format: 'json'})|json_encode() }},
{% endif %}
    "last": {{ url(site.pages[page.pagination.last], {canonical: true, format: 'json'})|json_encode() }}
  }
{% endif %}
}
