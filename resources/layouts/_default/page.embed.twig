<!DOCTYPE html>
<html lang="{{ site.language }}">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="googlebot" content="noindex,indexifembedded">
    <link rel="canonical" href="{{ url(page, {canonical: true, format: 'embed'}) }}">
    <title>{{ page.title }}</title>
    <style type="text/css">
      body {
        background-color: black;
        display: block;
        margin: 0;
        padding: 0;
      }
      img, video {
        position: absolute;
        top: 0px;
        right: 0px;
        bottom: 0px;
        left: 0px;
        max-height: 100%;
        max-width: 100%;
        margin: auto;
        object-fit: contain;
      }
      video {
        aspect-ratio: 16 / 9;
      }
    </style>
  </head>
  <body>
    {#- photo ~#}
    {%- if page.photo is defined ~%}
    {%- block photo ~%}
    <img src="{{ url(asset(page.photo), {canonical: true}) }}" alt="{{ page.title }}" style="width: 100%; height: auto;">
    {%- endblock ~%}
    {#- videos ~#}
    {%- elseif page.videos is defined ~%}
    {%- block video ~%}
    <video playsinline controls preload="auto"{% if page.poster|default(page.image|default) %} poster="{{ url(asset(page.poster|default(page.image|default)), {canonical: true}) }}"{% endif %}>
      {%- for video in page.videos ~%}
        {%- set asset_video = asset(video) ~%}
      <source src="{{ url(asset_video, {canonical: true}) }}" type="{{ asset_video.subtype }}">
      {%- endfor ~%}
    </video>
    {%- endblock ~%}
    {#- audios ~#}
    {%- elseif page.audios is defined ~%}
    {%- block audios ~%}
    <audio controls preload="auto">
      {%- for audio in page.audios ~%}
        {%- set asset_audio = asset(audio) ~%}
      <source src="{{ url(asset_audio, {canonical: true}) }}" type="{{ asset_audio.subtype }}">
      {%- endfor ~%}
    </audio>
    {%- endblock ~%}
    {#- else: URL ~#}
    {%- else ~%}
    {%- block default ~%}
    <a href="{{ url(page, {canonical: true}) }}" target="_blank" rel="noopener noreferrer">{{ page.title }}</a>
    {%- endblock ~%}
    {%- endif ~%}
  </body>
</html>