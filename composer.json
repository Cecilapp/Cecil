{
  "name": "cecil/cecil",
  "description": "Your content driven static site generator.",
  "keywords": [
    "static-site-generator",
    "markdown",
    "twig"
  ],
  "homepage": "https://cecil.app",
  "license": "MIT",
  "type": "library",
  "authors": [
    {
      "name": "Arnaud Ligny",
      "email": "arnaud@ligny.fr",
      "homepage": "https://arnaudligny.fr",
      "role": "Developer"
    }
  ],
  "support": {
    "source": "https://github.com/Cecilapp/Cecil",
    "issues": "https://github.com/Cecilapp/Cecil/issues"
  },
  "require": {
    "php": ">=7.1",
    "cocur/slugify": "^4.0",
    "dflydev/dot-access-data": "^2.0",
    "erusev/parsedown-extra": "^0.8",
    "intervention/image": "^2.5",
    "matthiasmullie/minify": "^1.3",
    "myclabs/php-enum": "^1.7",
    "padraic/humbug_get_contents": "^1.1",
    "padraic/phar-updater": "^1.0",
    "psr/log": "^1.0",
    "psr/simple-cache": "^1.0",
    "scssphp/scssphp": "^1.3",
    "spatie/image-optimizer": "^1.1",
    "symfony/console": "^4.4",
    "symfony/filesystem": "^4.4",
    "symfony/finder": "^4.4",
    "symfony/process": "^4.4",
    "symfony/property-access": "^4.4",
    "symfony/serializer": "^4.4",
    "symfony/yaml": "^4.4",
    "twig/extensions": "^1.5",
    "twig/twig": "^2.13",
    "voku/html-min": "^4.4",
    "wapmorgan/mp3info": "^0.0",
    "yosymfony/resource-watcher": "^2.0"
  },
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/Cecilapp/box"
    }
  ],
  "require-dev": {
    "humbug/box": "3.7.4.x-dev",
    "phpmd/phpmd": "^2.9",
    "phpunit/phpunit": "^7.5",
    "symfony/var-dumper": "^4.4"
  },
  "autoload": {
    "psr-4": {
      "Cecil\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Cecil\\Test\\": "tests/"
    }
  },
  "bin": [
    "bin/cecil"
  ],
  "extra": {
    "branch-alias": {
      "dev-master": "5.x-dev"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "test": "phpunit -c ./",
    "test-coverage": "phpunit -c ./ --coverage-text --coverage-clover build/logs/clover.xml",
    "test-bin": "cd bin && mkdir skeleton && php cecil new:site skeleton -f && php cecil build skeleton -v && rm -rf skeleton",
    "test-phar": "box compile && cd dist && mkdir skeleton && php cecil.phar new:site skeleton -f && php cecil.phar build skeleton -v && php cecil.phar show:content skeleton && rm -rf skeleton",
    "box": "box compile",
    "build": "@box",
    "coverage-install": [
      "wget -c -nc --retry-connrefused --tries=0 https://github.com/php-coveralls/php-coveralls/releases/latest/download/php-coveralls.phar -O coveralls.phar",
      "chmod +x coveralls.phar",
      "php coveralls.phar --version"
    ],
    "coverage-upload": "php coveralls.phar -v",
    "post-install-cmd": "cd ./tests/fixtures/website && composer install",
    "post-update-cmd": "cd ./tests/fixtures/website && composer update"
  },
  "config": {
    "platform": {
      "php": "7.1.3"
    },
    "sort-packages": true
  }
}
