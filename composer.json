{
  "name": "phpoole/phpoole",
  "description": "PHPoole is an easy and lightweight static website generator, written in PHP.",
  "keywords": ["static-site-generator", "static-site", "flat-file", "markdown", "twig", "yaml", "phpoole"],
  "homepage": "https://phpoole.org",
  "license": "MIT",
  "type": "project",
  "authors": [
    {
      "name": "Arnaud Ligny",
      "email": "arnaud@ligny.org",
      "homepage": "http://narno.org",
      "role": "Developer"
    }
  ],
  "support": {
    "source": "https://github.com/PHPoole/PHPoole",
    "issues": "https://github.com/PHPoole/PHPoole/issues"
  },
  "require": {
    "php": "^7.1",
    "phpoole/library": "2.3.0",
    "padraic/humbug_get_contents": "1.1.2",
    "padraic/phar-updater": "1.0.6",
    "symfony/filesystem": "4.1.2",
    "symfony/process": "4.1.2",
    "symfony/yaml": "4.1.2",
    "yosymfony/resource-watcher": "2.0.0",
    "zfcampus/zf-console": "1.4.0",
    "zendframework/zend-progressbar": "^2.6"
  },
  "require-dev": {
    "phpunit/phpunit": "7.2.7",
    "humbug/box": "^3.0"
  },
  "autoload": {
    "psr-4" : {
      "PHPoole\\Command\\": "src/Command",
      "PHPoole\\Util\\": "src/Util"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "PHPoole\\Test\\": "tests/"
    }
  },
  "bin": ["bin/phpoole"],
  "extra": {
    "branch-alias": {
      "dev-master": "3.x-dev"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "repositories": [
    {
      "type": "git",
      "url": "https://github.com/PHPoole/library"
    }
  ],
  "scripts": {
    "test": "phpunit -c ./",
    "box": "box compile"
  }
}
