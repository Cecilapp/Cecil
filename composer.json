{
  "name": "cecil/cecil",
  "description": "Your content driven static site generator.",
  "keywords": [
    "static-site-generator",
    "markdown",
    "twig"
  ],
  "homepage": "https://cecil.app",
  "license": "MIT",
  "type": "library",
  "authors": [
    {
      "name": "Arnaud Ligny",
      "email": "arnaud@ligny.fr",
      "homepage": "https://arnaudligny.fr",
      "role": "Developer"
    }
  ],
  "support": {
    "source": "https://github.com/Cecilapp/Cecil",
    "issues": "https://github.com/Cecilapp/Cecil/issues"
  },
  "require": {
    "php": "^7.1.3",
    "cocur/slugify": "4.0.0",
    "dflydev/dot-access-data": "2.0.0",
    "erusev/parsedown-extra": "0.8.1",
    "intervention/image": "^2.5",
    "matthiasmullie/minify": "1.3.63",
    "myclabs/php-enum": "1.7.6",
    "padraic/humbug_get_contents": "1.1.2",
    "padraic/phar-updater": "1.0.6",
    "scssphp/scssphp": "1.0.8",
    "spatie/image-optimizer": "1.1.4",
    "symfony/console": "4.4.6",
    "symfony/filesystem": "4.4.7",
    "symfony/finder": "4.4.6",
    "symfony/process": "4.4.6",
    "symfony/property-access": "^4.4",
    "symfony/serializer": "^4.4",
    "symfony/yaml": "4.4.6",
    "twig/extensions": "1.5.4",
    "twig/twig": "2.12.5",
    "voku/html-min": "4.3.0",
    "yosymfony/resource-watcher": "2.0.1"
  },
  "require-dev": {
    "phpunit/phpunit": "7.5.17",
    "phpmd/phpmd": "2.8.2",
    "humbug/box": "3.7.0"
  },
  "autoload": {
    "psr-4": {
      "Cecil\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Cecil\\Test\\": "tests/"
    }
  },
  "bin": [
    "bin/cecil"
  ],
  "extra": {
    "branch-alias": {
      "dev-master": "5.x-dev"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "test": "phpunit -c ./",
    "test-cli": "cd bin && mkdir skeleton && php cecil new:site skeleton && php cecil build -v skeleton && rm -rf skeleton",
    "test-build-cli": "box compile && cd dist && mkdir skeleton && php cecil.phar new:site skeleton && php cecil.phar show:content skeleton && php cecil.phar build -v skeleton && rm -rf skeleton",
    "box": "box compile",
    "build": "@box",
    "test-coverage-install": [
      "wget -c -nc --retry-connrefused --tries=0 https://github.com/php-coveralls/php-coveralls/releases/download/v2.1.0/php-coveralls.phar -O coveralls.phar",
      "chmod +x coveralls.phar",
      "php coveralls.phar --version"
    ],
    "test-coverage": "phpunit -c ./ --coverage-text --coverage-clover build/logs/clover.xml",
    "test-coverage-upload": [
      "php coveralls.phar -v"
    ],
    "post-install-cmd": "cd tests/fixtures/website;composer install;",
    "post-update-cmd": "cd tests/fixtures/website;composer update;"
  },
  "config": {
    "platform": {
      "php": "7.1.3"
    }
  }
}
